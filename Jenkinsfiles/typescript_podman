def remote = [:]
def image_names = ['ghcr.io/vencah/ak9si_final_project-typescript/podman-hello-world', 'ghcr.io/vencah/ak9si_final_project-typescript/podman-fibonacci', 'ghcr.io/vencah/ak9si_final_project-typescript/podman-primes']


def get_container_name(image_name) {
    image_name.tokenize(":")[1] + "_cont"
}

pipeline{
    agent any
    
    stages{
        
        stage('Define remote parameters') {
            steps{
                script{
                    remote.name = 'Podman'
                    remote.host = '130.61.63.197'
                    remote.user = 'ubuntu'
                    remote.knownHosts = '/home/agent_001/.ssh/known_hosts'
                    remote.identityFile = '/home/agent_001/.ssh/ssh-key-arm2.key'
                }
            }
        }
        
        stage('run and test containers') {
            steps {
                script {
                    image_names.each { image_name ->
                    
                        def container_name = get_container_name(image_name)
                    
                        stage("Pull newest image for ${image_name}"){
                            sshCommand remote: remote, command: "podman pull ${image_name}"
                        }
                        
                        stage("Run Podman container ${container_name}"){
                            sshCommand remote: remote, command: "podman run --name ${container_name} -d -p 8000:3000 ${image_name}"
                        }
                        
                        stage("Wait 60s for server to start"){
                            sleep 60
                        }
                        
                        
                        stage("Run oha tests for ${image_name}"){
                            if (image_name == 'ghcr.io/vencah/ak9si_final_project-typescript/podman-hello-world:typescript') {
                                sshCommand remote: remote, command: "/home/ubuntu/.cargo/bin/oha -n 1000 http://localhost:8000"
                            } else if ( image_name == 'ghcr.io/vencah/ak9si_final_project-typescript/podman-fibonacci:typescript') {
                                sshCommand remote: remote, command: "/home/ubuntu/.cargo/bin/oha -n 1000 http://localhost:8000/fibonacci/30"
                            } else {
                                sshCommand remote: remote, command: "/home/ubuntu/.cargo/bin/oha -n 1000 http://localhost:8000/primes/30"
                            }
                        }
                        
                        stage("Stop Podman container ${container_name}"){
                            sshCommand remote: remote, command: "podman stop ${container_name}"
                        }
                        
                        stage("Delete Podman container ${container_name}"){
                            sshCommand remote: remote, command: "podman rm ${container_name}"
                        }
                    }
                }
            }
        }
    }
}

